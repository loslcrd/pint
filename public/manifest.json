{
   "manifest_version": 3,

   "name": "PINT",
   "description": "PINT Is Not Torrenting",
   "version": "0.0.1",

   "permissions": [
      "activeTab",
      "scripting",
      "storage"
   ],

   "action": {
      "default_popup": "popup.html"
   },

   "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
   },

   "background": {
      "service_worker": "js/background.js",
      "scripts": ["js/background.js"]
   }
}
